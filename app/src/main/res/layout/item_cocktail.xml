<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="drink"
            type="com.example.cocktailrecipe.Drink" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

        <!--imageUrl은 내가 지정하는 속성 이름-->
        <ImageView
            android:id="@+id/imageview_url"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:imageUrl="@{drink.image}" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_favorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@+id/imageview_url"
            app:layout_constraintLeft_toLeftOf="@+id/imageview_url"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/imgbtn_state"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{drink.name}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageview_url"/>

        <TextView
            android:id="@+id/textview_recipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{drink.recipe}"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/textview_name"
            app:layout_constraintLeft_toRightOf="@+id/imageview_url"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>